pipeline {
    agent any

    environment {
        AWS_DEFAULT_REGION = 'us-east-1'
    }

    stages {
        stage('Check AWS Identity') {
            steps {
                withCredentials([[
                    $class: 'AmazonWebServicesCredentialsBinding',
                    credentialsId: 'ecr-credentials'
                ]]) {
                    sh '''
                        echo "Running as AWS user:"
                        aws sts get-caller-identity
                    '''
                }
            }
        }
    }
}
