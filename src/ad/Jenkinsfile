pipeline {
    agent any

    tools {
        jdk 'openjdk_21'
    }

    environment {
        SONARQUBE_SERVER = 'my-sonar'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                dir('src/ad') {
                    sh './gradlew clean build -x test'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                dir('src/ad') {
                    withSonarQubeEnv("${SONARQUBE_SERVER}") {
                        sh './gradlew sonarqube'
                    }
                }
            }
        }
    }
}
