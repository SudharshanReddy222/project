pipeline {
    agent any

    tools {
        jdk 'openjdk_17'
    }

    stages {
        stage('Debug') {
            steps {
                sh 'ls -al'
                sh 'ls -al src/ad'
            }
        }
        stage('Build microservice') {
            steps {
                dir('src/ad') {
                    sh 'chmod +x gradlew'           
                    sh './gradlew clean build'      
                }
            }
        }
    }
}
