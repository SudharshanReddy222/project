pipeline {
    agent any
    tools{
        
        jdk 'openjdk_17'
    }

    stages {
        stage('Debug') {
            steps {
                sh 'ls -al'
                sh 'ls -al src/ad'
            }
        }
        stage('Build microservice') {
            steps {
                dir('project/src/ad') {
                    sh './gradlew clean build'
                    sh 'chmod +x gradlew'
                }
            }
        }

    }
}
